---
import Footer from '../components/Footer.astro'
import '../styles/global.css'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Pavel Borodin - Portfolio</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body
    class="bg-[url('../assets/bg.svg')] bg-cover bg-center flex flex-col min-h-screen"
  >
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }
  html,
  body {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      'Open Sans',
      'Helvetica Neue',
      sans-serif;
    color-scheme: light dark;
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
